<div class="container">
	<h1 class="main-title">Créer un Gossip</h1>
	<%= form_for @gossip do |f| %>
		<div class="form-group">
		  <label for="">Auteur du Gossip</label>
		  <%= f.text_field :author %>	
		</div>
		<div class="form-group">
		  <label for="">Contenu du Gossip</label>
		  <%= f.text_field :content %>	
		</div>
		<div class="form-group">
		  <button class="btn btn-primary" type="submit">Créer</button>
		</div>
	<% end %>
</div>	